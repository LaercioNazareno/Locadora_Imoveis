@model locadora.Models.Imovel

@{
    ViewData["Title"] = "Index";
}

<h2>Imovel</h2>
<form asp-action="Edit" asp-antiforgery="true" method="POST">
    <input asp-for="Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="LocatarioId"></label>
        <select asp-for="LocatarioId" class="form-control" asp-items="ViewBag.Selecionador"></select>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Descrição"/>
    </div>
    <div class="form-group">
        <label asp-for="Area"></label>
        <input asp-for="Area" class="form-control" placeholder="Metros Quadrados"/>
    </div>
    <div class="form-group">
        <label asp-for="QuantidadeComodos"></label>
        <input asp-for="QuantidadeComodos" class="form-control" placeholder="Quantidade de Comodos"/>
    </div>
    <div class="form-group">
        <label asp-for="ValorAluguel"></label>
        <input asp-for="ValorAluguel" class="form-control" placeholder="Valor do Aluguel"/>
    </div>
    <div class="form-group">
        <label asp-for="Cep"></label>
        <input asp-for="Cep" class="form-control" placeholder="Informe o Cep"/>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" placeholder="Informe o Estado"/>
    </div>
    <div class="form-group">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control" placeholder="Informe a Cidade"/>
    </div>
    <div class="form-group">
        <label asp-for="Bairro"></label>
        <input asp-for="Bairro" class="form-control" placeholder="Informe o Bairro"/>
    </div>
    <div class="form-group">
        <label asp-for="Rua"></label>
        <input asp-for="Rua" class="form-control" placeholder="Informe a Rua"/>
    </div>
    <div class="form-group">
        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" class="form-control" placeholder="Informe o Complemento"/>
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary"/>
</form> 